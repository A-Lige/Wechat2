<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="vertical"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/id_tx"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/pytx3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/id_tx"
        app:layout_constraintTop_toTopOf="@id/id_tx"
        android:text="不知道取啥名"
        android:textColor="#000000"
        android:textSize="20sp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/id_number"
        android:layout_width="230dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="@id/id_name"
        app:layout_constraintTop_toBottomOf="@id/id_name"
        android:text="微信号：bl00314"
        android:textSize="14sp"
        android:paddingLeft="9dp"
        android:gravity="left|center"/>

    <ImageView
        android:id="@+id/code"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@id/id_number"
        app:layout_constraintBottom_toBottomOf="@id/id_number"
        android:padding="5dp"
        android:src="@drawable/ic_code"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_goto"
        app:layout_constraintBottom_toBottomOf="@id/code"
        app:layout_constraintStart_toEndOf="@id/code" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="252dp"
        android:layout_marginLeft="252dp"
        android:padding="5dp"
        android:src="@drawable/ic_creame"
        app:layout_constraintBottom_toTopOf="@+id/id_name"
        app:layout_constraintStart_toStartOf="@+id/id_name" />


</androidx.constraintlayout.widget.ConstraintLayout>